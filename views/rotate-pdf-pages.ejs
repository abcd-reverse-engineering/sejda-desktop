<%- include('partials/task-screen-before'); %>

<style>
  #pdf-canvas {
    margin-bottom: 80px;
  }

  .fa-font.faded {
    opacity: 0.3;
  }

  #allOddEvenGroup .btn .input-help {
    margin-right: -10px;
    margin-left: 4px;
  }

  #allOddEvenGroup {
    margin-left: 50px;
  }

  .pdf-page-wrap {
    cursor: auto;
  }

  .pdf-rotate {
    bottom: 85px;
  }

  [data-rotation="90"].page-tools-rotate-btn {
    border-top-right-radius: 3px !important;
    border-bottom-right-radius: 3px !important;
  }

  #tools-menu {
    margin-bottom: 20px;
  }

  .pdf-page-wrap[data-rotation="90"],
  .pdf-page-wrap[data-rotation="180"],
  .pdf-page-wrap[data-rotation="270"] {
    background-color: rgba(255,212,144,0.3);
  }
</style>

<section id="task-content" data-task="rotatePages" data-can-rotate="true" data-can-select="false" data-multiple-files="true">
  <div class="container centered">
    <div class="row">
      <h1><%= __('Rotate PDF pages') %></h1>
      <h2><%= __('Turn PDF pages and save permanently') %></h2>
    </div>
  </div>

    <%- include('partials/file-upload'); %>
    <%- include('partials/loading'); %>
    <%- include('partials/pdf-files-summary'); %>
    <%- include('partials/pdf-page-thumbnails'); %>

  <div class="centered bottom-fixed step2" style="display:none">
    <form class="form-inline task-form" autocomplete="off">
      <input type="hidden" name="type" value="rotatePages"/>

      <div class="container">
        <div class="row head-space-xl">
          <button type="submit" class="btn btn-default btn-medium"><%= __('Apply changes') %></button>
        </div>
      </div>
    </form>
  </div>

  <div id="globalBtns" style="display: none;">
    <div class="btn-group" id="allOddEvenGroup" style="margin-top: 10px;">
      <button type="button" class="btn btn-default page-tools-btn active" data-pages="all">
        <%= __('All pages') %>
      </button>
      <button type="button" class="btn btn-default page-tools-btn" data-pages="odd" title="Pages 1, 3, 5, 7">
        <%= __('Only odd') %>
      </button>
      <button type="button" class="btn btn-default page-tools-btn" data-pages="even" title="Pages 2, 4, 6, 8">
        <%= __('Only even') %>
      </button>
    </div>

    <div class="btn-group" id="rotationsGroup" style="margin-top: 10px; margin-left: 20px;">
      <button type="button" class="btn btn-default page-tools-btn" data-rotation="-90" title="Rotate left">
        <i class="fal fa-undo"></i>
      </button>
      <button type="button" class="btn btn-default page-tools-btn" data-rotation="90" title="Rotate right">
        <i class="fal fa-redo"></i>
      </button>
    </div>

    <div class="btn-group" style="margin-top: 10px; margin-left: 50px;">
      <button type="button" class="btn btn-default" id="resetBtn">
        <i class="fal fa-trash"></i> <%= __('Reset') %>
      </button>
    </div>
  </div>

</section>

<%- include('partials/task-common-output-options', { outputFilenameAffix: 'rotated' }); %>
<%- include('partials/task-screen-after'); %>

<%- include('partials/task-screen-before'); %>

<section id="task-content" data-task="extractImages" data-multiple-files="true">
  <div class="container centered">
    <div class="row">
      <h1><%= __('Extract images from PDF') %></h1>
      <h2><%= __('Save each image from the PDF as a separate file') %></h2>
    </div>
  </div>

  <%- include('partials/file-upload'); %>
  <%- include('partials/loading'); %>
  <%- include('partials/pdf-files-summary'); %>

  <div class="centered step2" style="display:none; margin-top: 80px;" id="step2Choices">
    <div class="row">
      <label><%= __('Choose an option') %></label>
    </div>
    <div class="row">
      <a class="btn btn-medium btn-secondary btn-choice" data-choice="pdf-to-jpg">
        <div class="icons"><i class="fal fa-file-pdf"></i><i class="fal fa-angle-right"></i><i class="fal fa-file-image"></i></div>
        <div class="text">&nbsp;</div>
        <strong><%= __('Convert entire pages') %> <i class="fal fa-arrow-right"></i></strong>
      </a>
      <a class="btn btn-medium btn-secondary default btn-choice" data-choice="extract-images">
        <div class="icons"><i class="fal fa-file-pdf"></i><i class="fal fa-angle-right"></i>
          <i class="fal fa-file-image" style="font-size:21px; margin-right: 3px;"></i>
          <i class="fal fa-file-image" style="font-size:15px; margin-right: 3px;"></i>
          <i class="fal fa-file-image" style="font-size:26px"></i></div>
        <div class="text">&nbsp;</div>
        <strong><%= __('Extract single images') %> <i class="fal fa-arrow-right"></i></strong>
      </a>
    </div>
    <div class="row head-space-xl" style="margin-top: 30px;">
      <button id="step2ChoicesContinueBtn" class="btn btn-default btn-medium"><%= __('Continue') %> <i class="fal fa-angle-right"></i></button>
    </div>
  </div>

  <div class="centered step3" style="display:none; margin-top: 40px">
    <form class="form-inline task-form" autocomplete="off">
      <input type="hidden" name="type" value="extractImages"/>

      <div class="container">
        <div class="row head-space">
          <button type="submit" class="btn btn-default btn-medium"><%= __('Extract images') %></button>
        </div>
      </div>
    </form>
  </div>

</section>

<%- include('partials/task-common-output-options', { onlyDirectory: true, outputFilenamePattern: '[BASENAME]_p[CURRENTPAGE]_[FILENUMBER]' }); %>
<%- include('partials/task-screen-after'); %>
